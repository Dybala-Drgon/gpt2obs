{
  "manifest_version": 3,
  "name": "ChatGPT to Obsidian",
  "version": "1.0.0",
  "description": "将ChatGPT对话总结并保存到Obsidian知识库",
  "permissions": [
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://open.bigmodel.cn/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["file-storage.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
 ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
